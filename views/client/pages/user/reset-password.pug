extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Change password
        form(
          action="/user/password/reset"
          method="POST"
        )
          div(class="form-group")
            label(for="password") New password
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            label(for="confirmPassword") Verify password
            input(
              type="password"
              class="form-control"
              id="confirmPassword"
              name="confirmPassword"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Change password