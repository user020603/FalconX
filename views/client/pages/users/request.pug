extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3

    include ../../partials/list-btn-users.pug
    br
    .row
      .col-12
        +box-head("Sent request")
    br
    .row
      each user in users
        .col-6
          div(class="box-user add")
            div(class="inner-avatar")
              a(href=`/user/detail/${user.id}`)
                img(
                  src="https://robohash.org/hicveldicta.png"
                  alt=user.fullName
                )
            div(class="inner-info")
              a(href=`/user/detail/${user.id}` class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-add-friend=user.id
                ) Add friend
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-cancel-friend=user.id
                ) Cancel


block script
  script( src="/js/users.js")