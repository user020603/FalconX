extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3

    include ../../partials/list-btn-users.pug

    br
    .row
      .col-12
        +box-head("List of users")

    br
    .row(data-users-not-friend=user.id)
      each user in users
        .col-6(user-id=user.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src="https://cdn.ligadosgames.com/imagens/pubg-mobile-requisitos-sn.jpg"
                alt=user.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-add-friend=user.id
                ) Add friend
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-cancel-friend=user.id
                ) Cancel

block script
  script(src="/js/users.js")